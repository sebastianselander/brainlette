#!/usr/bin/env bash
set -e
if [[ ! -d "/home/sebastian/Documents/git/brainlette/compiler/src" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/sebastian/Documents/git/brainlette/compiler/src")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/sebastian/Documents/git/brainlette/compiler/src" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/sebastian/Documents/git/brainlette/compiler/src/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/sebastian/Documents/git/brainlette/compiler/src/.envrc" "/home/sebastian/Documents/git/brainlette/compiler/src/.direnv"/*.rc
